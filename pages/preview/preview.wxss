/**preview.wxss**/
.container {
  padding: 20rpx;
}
.avatar-container {
  position: relative;
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  border: 10rpx solid white;
}
.frame {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.frame-name {
  text-align: center;
  margin: 20rpx 0;
  font-size: 32rpx;
}
.save-btn {
  width: 80%;
  background-color: #1aad19;
  color: white;
}
